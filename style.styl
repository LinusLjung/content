$vw($value, $base = 19.2)
  unit($value / $base, vw)

$em($value, $base = 10)
  unit($value / $base, em)

$theme-light()
  &.theme-light
  .theme-light &
    {block}

$theme-dark()
  &.theme-dark
  .theme-dark &
    {block}

$media()
  img
  video
  iframe
    {block}

$color-black = #0c1214
$color-white = #fff

$margin-row = $em(10)

$nakd-grid
  font-family 'proxima-nova', 'Noto sans', sans-serif
  font-size 10px
  line-height 1
  text-align center
  position relative

$full-width
  position absolute
  left 50%
  top 0
  transform translateX(-50%)
  width 100vw

.nakd-grid
  @extend $nakd-grid

  +$media()
    max-width 100%
    height auto
    opacity 1

  video
    width 100%

  .nakd-grid-hero

  a:any-link
    color inherit
    text-decoration none

  @media (max-width 1200px)
    font-size $vw(10, 12)

  &.nakd-grid-mobile
    font-size $vw(5.5, 3.75)

.nakd-grid-hero
.nakd-grid-copy
[class*='nakd-grid-copy-text-']
.nakd-grid-row
.nakd-grid-slide
.nakd-grid-slide-inner
.nakd-grid-slide-inner-inner
  display block

.nakd-grid-row
.nakd-grid-hero
.nakd-grid-slide
  position: relative;

.nakd-grid-row
  display flex
  justify-content center

.nakd-grid-row + .nakd-grid-row
  margin-top $margin-row

  .nakd-grid-instagram &
    margin-top 0

.nakd-grid-row:not(.nakd-grid-hero)
  font-size 1.2em

.nakd-grid-hero
  font-size $vw(10)
  height $vw(800)

  +$media()
    width 100%

  > span > img:first-child
  > span > video:first-child
  > span > iframe:first-child
    width 100%
    height 100%
    object-fit cover

.nakd-grid-hero-inner
  @extend $full-width

  height 100%
  overflow hidden

.nakd-grid-item
  position relative

  .nakd-grid-row:not(.nakd-grid-brands) & + .nakd-grid-item
    margin-left $margin-row

    .nakd-grid-instagram &
      margin-left 0

  .nakd-grid-mobile .nakd-grid-brands &
    width 33%
    flex 1 0 auto

.nakd-grid-copy
  position absolute
  left 0
  width 100%
  color $color-white
  pointer-events none
  font-size $em(7.5)
  padding 0 3.2em

  .nakd-grid-row-split-3 &
    font-size $em(7, 12)

  .nakd-grid:not(.nakd-grid-mobile) &
    top 50%
    transform translateY(-50%)

  .nakd-grid-mobile &
    bottom 14vw

  .nakd-grid-hero &
    top 41%
    font-size $em(14)

  +$theme-dark()
    color $color-black

.nakd-grid-copy-2
  @extend .nakd-grid-copy

  width auto

.nakd-grid-copy-left
  @extend .nakd-grid-copy-2

  left 3.8%

.nakd-grid-copy-right
  @extend .nakd-grid-copy-2

  left unset
  right 3.8%

.nakd-grid-copy-logo
  .nakd-grid &
    width 30em

.nakd-grid-copy-text-1
.nakd-grid-copy-text-2
  letter-spacing .2em
  text-transform uppercase

.nakd-grid-copy-text-1
  font-size $em(38.5)
  line-height .9
  font-weight 700

.nakd-grid-copy-text-2
  font-size $em(21)
  line-height 1.3

.nakd-grid-copy-text-1
.nakd-grid-copy-text-2
.nakd-grid-copy-logo
  & + .nakd-grid-copy-text-1
  & + .nakd-grid-copy-text-2
    margin-top $em(9.6, 21)

  & + .nakd-grid-cta
    margin-top $em(18, 11.8)

.nakd-grid-cta
  $font-size = 11.8

  display inline-block
  cursor pointer
  font-size $em($font-size)
  border-radius $em(3, $font-size)
  padding $em(7, $font-size) $em(14, $font-size)
  border 1px solid
  background-color transparent

  &.nakd-grid-cta-interactable
    pointer-events auto

  &.nakd-grid-cta-solid
    background-color $color-white
    color $color-black
    border-color @background-color

    +$theme-dark()
      background-color $color-black
      color $color-white
      border-color @background-color

  .nakd-grid-mobile & {
    font-size 1.8em
  }

  .nakd-grid-instagram &
    font-size 1.6em

.nakd-grid-code
  pointer-events auto

.nakd-grid-slide
  overflow hidden

.nakd-grid-slide-inner-inner
  transition transform 800ms cubic-bezier(0.77, 0, 0.175, 1)
  display flex

  > *
    position relative
    flex 1 0 100%

  a
    +$media
      display block
      width 100%
      height 100%

[data-nakd-grid-slide-prev]
[data-nakd-grid-slide-next]
  font-size 1.6em
  cursor pointer
  position absolute
  top 50%
  width $em(115, 34)
  height auto
  padding $em(15, 19.2)
  transform translateY(-50%)

  .nakd-grid-mobile &
    font-size 1.7em

[data-nakd-grid-slide-prev]
  left 0

[data-nakd-grid-slide-next]
  right 0
  transform rotate(180deg) translateY(50%)

.nakd-grid-instagram
.nakd-grid-brands
  margin-top $margin-row

.nakd-grid-brands
  .nakd-grid:not(.nakd-grid-mobile)
    margin-top $em(40, 9)

  .nakd-grid-mobile &
    flex-wrap wrap

.nakd-grid-youtube-wrap
  display block
  width 100%
  height 0
  padding-bottom 56.25%
  position relative
  overflow hidden

  [data-nakd-youtube-id]
  a
    position absolute
    left 0
    top 0
    width 100%
    height 100%

  [data-nakd-youtube-id]
    height calc(100% + 90px)
    margin-top -45px

.nakd-grid-youtube-background
  position absolute
  left 0
  top 0
  width 100%
  height 100%

.nakd-campaign
  @extend $nakd-grid

.nakd-campaign-inner
  @extend $full-width

.nakd-campaign-image-wrap
  position absolute

.nakd-campaign-hotspot
  position absolute

  a
    display block
    width 100%
    height 100%

.nakd-campaign-product-group
  position absolute

.nakd-campaign-product
  font-size $vw(13.5)
  line-height 1.7

  +$theme-light()
    color $color-white

  .nakd-campaign-mobile &
    font-size $vw(7, 3.75)
    line-height 1.5

  & + &
    margin-top $em(9.6, 13.5)

  span
    display block

.nakd-campaign-shopnow
  font-weight 700
  text-transform uppercase
